<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:textColor="#000001"
    android:orientation="vertical" >
    <include  layout="@layout/banner_layout" android:id="@+id/banner_id" />
     <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/accounts_name"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"  >
    	 	
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#c01220"
    android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/edit_acct_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.98"
                android:background="#00000000"
                android:onClick=""
                android:src="@drawable/edit_prefs" />

            
            <View 
      android:layout_width="1dip"
      android:layout_height="48dip"
      android:background="#ffffff"
/>
            
            <ImageButton
            android:id="@+id/delete_acct_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="#00000000"
            android:src="@drawable/delete_icon"
            android:onClick="deleteAccount" />
            
             <View 
      android:layout_width="1dip"
      android:layout_height="48dip"
      android:background="#ffffff"
/>
            
            <ImageButton
            android:id="@+id/sync_acct_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="#00000000"
            android:src="@drawable/sync_icon"
            android:onClick="syncAccount" />
            
           
     </LinearLayout>
    
     <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
                 
     <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/accounts_desc"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:paddingTop="20dp"
    	android:paddingBottom="20dp"  >
    	<TextView
             android:id="@+id/err_acctname_details"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingTop="5dp"
             android:paddingBottom="5dp"
             android:paddingLeft="5dp"
             android:paddingRight="5dp"
             android:textColor="#ff0000"
             />
         <TextView
             android:id="@+id/acttype" 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingTop="5dp"
             android:paddingBottom="5dp"
             android:paddingLeft="5dp"
             android:paddingRight="5dp"
             android:background="#585858"
             android:textColor="#ffffff"
             android:textSize="15dp"
             android:textStyle="bold"
             />
         <TextView
             android:id="@+id/actname"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingTop="5dp"
             android:paddingBottom="5dp"
             android:paddingLeft="5dp"
             android:paddingRight="5dp"
             android:textColor="#000000"
             />
         <TextView
             android:id="@+id/synctime" 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingTop="5dp"
             android:paddingBottom="5dp"
             android:paddingLeft="5dp"
             android:paddingRight="5dp"
             android:background="#585858"
             android:textColor="#ffffff"
             android:textSize="15dp"
             android:textStyle="bold"
             android:text="Last Sync Time"
             />
          <TextView
             android:id="@+id/synctimeval"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingTop="5dp"
             android:paddingBottom="5dp"
             android:paddingLeft="5dp"
             android:paddingRight="5dp"
             android:textColor="#000000"
             />
         <TextView
             android:id="@+id/size"
              android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingTop="5dp"
             android:paddingBottom="5dp"
             android:paddingLeft="5dp"
             android:paddingRight="5dp"
             android:background="#585858"
             android:textColor="#ffffff"
             android:textSize="15dp"
             android:textStyle="bold"
             android:text="Size"
             />
         <TextView
             android:id="@+id/sizeval"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textColor="#000000"
             android:paddingTop="5dp"
             android:paddingBottom="5dp"
             android:paddingLeft="5dp"
             android:paddingRight="5dp"
             />    	 	    	 	
    </LinearLayout>
    </ScrollView>
    

</LinearLayout>